<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.display_name %>'s Profile - Theatre Tracker</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container">
        <div style="display: flex; align-items: center; gap: 20px; margin-bottom: 40px;">
            <img src="<%= profileUser.profile_picture %>" alt="Profile" style="width: 100px; height: 100px; border-radius: 50%;">
            <div>
                <h1 style="font-size: 2rem; color: var(--smeg-white);"><%= profileUser.display_name %>'s Reviews</h1>
                <p style="color: var(--smeg-light-gray);">Member since <%= new Date(profileUser.created_at).toLocaleDateString() %></p>
            </div>
        </div>

        <div class="reviews-list">
            <% reviews.forEach(review => { %>
                <div class="review">
                    <div class="review-header">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <a href="/play/<%= review.play_id %>" style="color: var(--smeg-white); text-decoration: none;">
                                <strong><%= review.play_title %></strong>
                            </a>
                        </div>
                        <span class="rating">
                            <% for(let i = 0; i < 5; i++) { %>
                                <i class="fas fa-star" style="color: <%= i < review.rating ? 'var(--smeg-red)' : 'var(--smeg-gray)' %>"></i>
                            <% } %>
                        </span>
                        <span class="date"><%= new Date(review.date_posted).toLocaleDateString() %></span>
                    </div>
                    <p class="review-text"><%= review.review_text %></p>
                </div>
            <% }); %>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>